<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Spectacol"
           table="spectacole">
        <id name="id" column="id">
            <generator class="increment" />
        </id>
        <property
                name="data_spectacol"
                column="data_spectacol"/>
        <property
                name="titlu"
                column="titlu"/>
        <property
                name="pret_bilet"
                column="pret_bilet"/>
        <property
                name="lista_locuri_vandute"
                column="lista_locuri_vandute"/>
        <property
                name="sold"
                column="sold"/>
    </class>
</hibernate-mapping>